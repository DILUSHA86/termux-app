<body>
    <div class="scanlines"></div>
    <div id="ui-wrapper">
        <div class="hud-top">
            <div>SYSTEM: ADX-V3-SUPERNOVA</div>
            <div>PING: <span id="ping-txt">24</span>MS</div>
        </div>

        <div class="map-box">
            <div class="grid"></div>
            <div class="sat-dot"></div>
        </div>

        <div class="log-box" id="log"></div>
    </div>

    <script>
        const pingTxt = document.getElementById('ping-txt');
        const log = document.getElementById('log');
        const root = document.documentElement;

        function updateNeuralState() {
            // Random Ping Logic
            const p = Math.floor(Math.random() * 600);
            pingTxt.innerText = p;

            // Balance Interference
            const shake = p > 350 ? (p / 80) + "px" : "0px";
            root.style.setProperty('--ping-shake', shake);

            // Hex Log Generation
            const entry = document.createElement('div');
            entry.innerText = `> RECV: 0x${Math.random().toString(16).slice(2,10).toUpperCase()}`;
            log.prepend(entry);
            if(log.children.length > 10) log.removeChild(log.lastChild);
        }

        setInterval(updateNeuralState, 200);
    </script>
</body>
